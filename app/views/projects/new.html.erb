<h1> CREATE PROJECT  </h1>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@proj, :html => {class: "form-horizontal" }) do |form| %>
     <div class ="form-group">
        <div class="control-label  col-md-2" >
          <%= form.label :name %>
        </div>
     <div class ="col-md-8">
        <%= form.text_field :name, class: "form-control", placeholder:"Enter Projects's name ", autofocus: true %>
  </div>
</div>
   
    <div class ="form-group">
    <div class="control-label  col-md-2" >
       <%= form.label :Description%>
    </div>
  <div class ="col-md-8">
  <%= form.text_area :description, class: "form-control" %>

  </div>
  </div>
  <div class ="form-group">
  <div class="control-label  col-md-2" >
  <%= form.label :Qas%>
  </div>
  <div class ="col-md-8">

      <%= form.fields_for :user_ids do |r| %>
      <%= r.collection_select(:user_ids, User.where(role: 0),:id, :username, { :prompt => 'Select Qa' } ) %>
      <% end %>

  </div>
  </div>
  <div class ="form-group">
  <div class="control-label  col-md-2" >
  <%= form.label :Developer%>
  </div>
  
  <div class ="col-md-8">

      <%= form.fields_for :user_id do |r| %>
      <%= r.collection_select(:user_id, User.where(role: 0), :id, :username, { :prompt => 'Select Developer' } ) %>
      <% end %>

  </div>
  </div>




    <div class ="form-group">
      <div class="col-md-offset-2  col-md-10" >
         <%= form.submit "Create Project",class:"btn btn-primary btn-lg btn-xlarge" %> 
      </div>
      </div>
   
   <div class="col-md-4 col-md-offset-4">
      [<%= link_to " All Projects " , projects_path %> ]       
    <%end %>
      </div>
</div>